/* pages/learn/learn.wxss */
.container {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    height: 100vh;
    box-sizing: border-box;
  }
  
.progress {
    font-size: 28rpx;
    color: #6c757d;
    font-weight: 600;
  }
  
  .status-text {
    font-size: 32rpx;
    color: #495057;
    font-weight: 500;
  }
  
  .function-icons .icon {
    font-size: 40rpx;
    padding: 10rpx;
  }
  /* 状态栏样式 */
.status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    margin-bottom: 20rpx;
    border-bottom: 2rpx solid #f8f9fa;
  }

  /* 卡片样式 */
  .card {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: #fff;
    border-radius: 20rpx;
    padding: 60rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 单词部分 */
  .word-section {
    text-align: center;
    margin-bottom: 60rpx;
  }
  
  .word {
    display: block;
    font-size: 64rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 20rpx;
  }
  
  .phonetic {
    display: block;
    font-size: 32rpx;
    color: #7f8c8d;
  }
  
  /* 提示例句部分 */
  .hint-section {
    border-top: 2rpx solid #f1f2f6;
    padding-top: 40rpx;
    margin-top: 40rpx;
  }
  
  .example-en {
    font-size: 36rpx;
    line-height: 1.6;
    color: #2c3e50;
    text-align: center;
    font-style: italic;
  }
  
  /* 详情部分 */
  .detail-section {
    border-top: 2rpx solid #f1f2f6;
    padding-top: 40rpx;
    margin-top: 40rpx;
  }
  
  .meaning-section {
    margin-bottom: 40rpx;
    text-align: center;
  }
  
  .type {
    display: inline-block;
    background: #4facfe;
    color: white;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    margin-right: 20rpx;
  }
  
  .meaning {
    font-size: 36rpx;
    color: #2c3e50;
    font-weight: 500;
  }
  
  .example-section {
    margin-bottom: 40rpx;
  }
  
  .example-zh {
    display: block;
    font-size: 32rpx;
    color: #7f8c8d;
    margin-top: 20rpx;
    line-height: 1.5;
  }
  
  .audio-section {
    text-align: center;
  }
  
  .audio-btn {
    background: transparent;
    border: 2rpx solid #4facfe;
    color: #4facfe;
    border-radius: 50rpx;
    padding: 20rpx 40rpx;
    font-size: 28rpx;
  }
  
  /* 按钮区域 */
  .button-section {
    margin-top: auto;
  }
  
  .judging-buttons,
  .hinting-buttons,
  .learning-buttons {
    display: flex;
    justify-content: space-between;
    gap: 30rpx;
  }
  
  .btn {
    flex: 1;
    border: none;
    border-radius: 50rpx;
    padding: 30rpx;
    font-size: 32rpx;
    font-weight: 600;
    transition: all 0.3s;
  }
  
  .know-btn {
    background: linear-gradient(135deg, #00b894, #00a085);
    color: white;
  }
  
  .dont-know-btn {
    background: linear-gradient(135deg, #ff7675, #ff5757);
    color: white;
  }
  
  .remember-btn {
    background: linear-gradient(135deg, #74b9ff, #0984e3);
    color: white;
  }
  
  .still-dont-know-btn {
    background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
    color: #2d3436;
  }
  
  .next-btn {
    background: linear-gradient(135deg, #a29bfe, #6c5ce7);
    color: white;
  }