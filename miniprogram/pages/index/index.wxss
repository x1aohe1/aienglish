/* pages/index/index.wxss */
.container {
    background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    color: white;
    min-height: 100vh;
    padding: 0;
  }
  
  /* 用户头部区域 */
  .user-header {
    padding: 60rpx 40rpx 40rpx;
  }
  
  .user-card {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 24rpx;
    padding: 40rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
  }
  
  .user-greeting {
    flex: 1;
    margin-left: 30rpx;
  }
  
  .greeting {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .sub-greeting {
    display: block;
    font-size: 24rpx;
    opacity: 0.8;
  }
  
  .days-badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 12rpx 24rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
    font-weight: bold;
  }
  
  /* 统计区域 */
  .stats-section {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 30rpx;
    padding: 40rpx;
    margin: 0 40rpx 30rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .section-title {
    font-size: 32rpx;
    margin-bottom: 40rpx;
    display: flex;
    align-items: center;
  }
  
  /* 统计网格 */
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30rpx;
  }
  
  .stat-item {
    text-align: center;
    padding: 20rpx 0;
  }
  
  .stat-value {
    font-size: 56rpx;
    font-weight: 700;
    margin-bottom: 10rpx;
  }
  
  .stat-label {
    font-size: 26rpx;
    opacity: 0.9;
  }
  
  /* 功能按钮 */
  .actions-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30rpx;
    margin: 50rpx 40rpx;
  }
  
  .action-btn {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 24rpx;
    padding: 40rpx 20rpx;
    text-align: center;
    border: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .action-btn:active {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-6rpx);
  }
  
  .action-btn.primary {
    background: white;
    color: #2575fc;
  }
  
  .action-btn.primary:active {
    background: #f8f9fa;
  }
  
  .action-icon {
    font-size: 48rpx;
    margin-bottom: 20rpx;
  }
  
  .action-text {
    font-size: 30rpx;
    font-weight: 500;
  }
  
  /* 群组列表 */
  .groups-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .group-item {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
  }
  
  .group-item:active {
    background: rgba(255, 255, 255, 0.2);
  }
  
  .group-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 24rpx;
  }
  
  .group-info {
    flex: 1;
  }
  
  .group-name {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 8rpx;
  }
  
  .group-members {
    font-size: 24rpx;
    opacity: 0.8;
  }
  
  .group-arrow {
    font-size: 40rpx;
    opacity: 0.7;
  }