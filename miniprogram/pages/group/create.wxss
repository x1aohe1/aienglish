/* pages/group/create.wxss */
.container {
    padding: 30rpx;
    min-height: 100vh;
    background-color: #f8f9fa;
  }
  
  /* 表单卡片 */
  .form-card {
    background: white;
    border-radius: 16rpx;
    padding: 40rpx;
    margin-bottom: 30rpx;
  }
  
  .form-item {
    margin-bottom: 50rpx;
    position: relative;
  }
  
  .form-label {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20rpx;
  }
  
  .form-input {
    width: 100%;
    height: 100rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 12rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    box-sizing: border-box;
  }
  
  .form-input:focus {
    border-color: #4facfe;
    background: white;
  }
  
  .char-count {
    position: absolute;
    right: 0;
    top: 0;
    font-size: 26rpx;
    color: #bdc3c7;
  }
  
  /* 提示信息 */
  .tips {
    background: #f8fcff;
    border: 1rpx solid #e1f0ff;
    border-radius: 12rpx;
    padding: 30rpx;
  }
  
  .tips-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #4facfe;
    margin-bottom: 20rpx;
  }
  
  .tips-item {
    display: block;
    font-size: 26rpx;
    color: #7f8c8d;
    line-height: 1.6;
    margin-bottom: 10rpx;
  }
  
  .tips-item:last-child {
    margin-bottom: 0;
  }
  
  /* 按钮区域 */
  .button-section {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30rpx;
    background: white;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  }
  
  .create-btn {
    width: 100%;
    height: 100rpx;
    background: linear-gradient(135deg, #4facfe, #00f2fe);
    color: white;
    border: none;
    border-radius: 50rpx;
    font-size: 34rpx;
    font-weight: 600;
  }
  
  .create-btn.disabled {
    background: #bdc3c7;
    color: #ecf0f1;
  }