/* pages/group/join.wxss */
.container {
    padding: 30rpx;
    min-height: 100vh;
    background-color: #f8f9fa;
  }
  
  /* 加入方式选项卡 */
  .method-tabs {
    display: flex;
    background: white;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
  }
  
  .method-tab {
    flex: 1;
    text-align: center;
    padding: 30rpx;
    font-size: 28rpx;
    transition: all 0.3s;
    border-bottom: 4rpx solid transparent;
  }
  
  .method-tab.active {
    border-bottom-color: #4facfe;
    color: #4facfe;
    font-weight: 600;
    background-color: #f8fcff;
  }
  
  /* 表单卡片 */
  .form-card {
    background: white;
    border-radius: 16rpx;
    padding: 40rpx;
  }
  
  .form-item {
    margin-bottom: 40rpx;
  }
  
  .form-label {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20rpx;
  }
  
  .form-input {
    width: 100%;
    height: 100rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 12rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    box-sizing: border-box;
    text-align: center;
    letter-spacing: 8rpx;
    font-weight: 600;
  }
  
  .form-input:focus {
    border-color: #4facfe;
    background: white;
  }
  
  /* 提示信息 */
  .tips {
    background: #f8fcff;
    border: 1rpx solid #e1f0ff;
    border-radius: 12rpx;
    padding: 30rpx;
    margin-bottom: 40rpx;
  }
  
  .tips-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #4facfe;
    margin-bottom: 20rpx;
  }
  
  .tips-item {
    display: block;
    font-size: 26rpx;
    color: #7f8c8d;
    line-height: 1.6;
    margin-bottom: 10rpx;
  }
  
  .tips-item:last-child {
    margin-bottom: 0;
  }
  
  /* 群组预览 */
  .group-preview {
    background: #f8f9fa;
    border-radius: 12rpx;
    padding: 30rpx;
    border: 2rpx solid #e9ecef;
    margin-bottom: 30rpx;
  }
  
  .invite-preview {
    border-color: #4facfe;
    background: #f8fcff;
  }
  
  .preview-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20rpx;
  }
  
  .group-name {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    color: #4facfe;
    margin-bottom: 10rpx;
  }
  
  .group-meta {
    display: block;
    font-size: 26rpx;
    color: #7f8c8d;
  }
  
  /* 操作按钮 */
  .action-btn {
    width: 100%;
    height: 100rpx;
    border: none;
    border-radius: 50rpx;
    font-size: 34rpx;
    font-weight: 600;
  }
  
  .search-btn {
    background: linear-gradient(135deg, #4facfe, #00f2fe);
    color: white;
  }
  
  .search-btn:disabled {
    background: #bdc3c7;
    color: #ecf0f1;
  }
  
  .invite-btn {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
  }
  
  .invite-btn:disabled {
    background: #bdc3c7;
    color: #ecf0f1;
  }